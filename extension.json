{
	"name": "StopForumSpam",
	"version": "0.2.0",
	"author": [
		"Kunal Mehta",
		"Ryan Schmidt"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:StopForumSpam",
	"descriptionmsg": "stopforumspam-desc",
	"license-name": "GPL-2.0+",
	"type": "antispam",
	"AvailableRights": [
		"sfsblock-bypass",
		"stopforumspam"
	],
	"GroupPermissions": {
		"sysop": {
			"stopforumspam": true,
			"sfsblock-bypass": true
		}
	},
	"MessagesDirs": {
		"StopForumSpam": [
			"i18n"
		]
	},
	"AutoloadClasses": {
		"SFSHooks": "StopForumSpam.hooks.php",
		"StopForumSpam": "StopForumSpam.body.php",
		"BlacklistUpdate": "BlacklistUpdate.php"
	},
	"ResourceModules": {
		"ext.SFS.formhack": {
			"scripts": [
				"ext.SFS.formhack.js"
			],
			"dependencies": [
				"mediawiki.jqueryMsg",
				"mediawiki.special.block"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "StopForumSpam"
	},
	"Hooks": {
		"SpecialPageBeforeFormDisplay": "SFSHooks::onSpecialPageBeforeFormDisplay",
		"SpecialBlockModifyFormFields": "SFSHooks::onSpecialBlockModifyFormFields",
		"BlockIpComplete": "SFSHooks::onBlockIpComplete",
		"AbuseFilter-computeVariable": "SFSHooks::abuseFilterComputeVariable",
		"AbuseFilter-generateUserVars": "SFSHooks::abuseFilterGenerateUserVars",
		"AbuseFilter-builder": "SFSHooks::abuseFilterBuilder",
		"getUserPermissionsErrorsExpensive": "SFSHooks::onGetUserPermissionsErrorsExpensive",
		"OtherBlockLogLink": "SFSHooks::onOtherBlockLogLink",
		"UnitTestsList": "SFSHooks::onUnitTestsList"
	},
	"config": {
		"SFSAPIKey": {
			"value": ""
		},
		"SFSIPListLocation": {
			"value": false
		},
		"SFSValidateIPList": {
			"value": true
		},
		"SFSEnableDeferredUpdates": {
			"value": true
		},
		"SFSIPThreshold": {
			"value": 5
		},
		"SFSBlacklistCacheDuration": {
			"value": 432000
		},
		"SFSEnableConfidenceVariable": {
			"value": true
		}
	},
	"manifest_version": 2
}
